<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>Add Filght</title>
  </head>
  <body style="background-color: #f78536">
    <nav class="p-5" style="background-color: whitesmoke"></nav>

    <div class="modal-dialog mt-5">
      <div class="modal-content">
        <form method="POST" action="/addFlight">
          <div class="modal-header">
            <h4 class="modal-title">Add a Flight</h4>
          </div>

          <div class="modal-body">
            <div class="form-group">
              <label>From city</label>
              <input type="text" class="form-control" name="fCity" required />
            </div>

            <div class="form-group">
              <label>To city</label>
              <input type="text" class="form-control" name="tCity" required />
            </div>
            <div class="form-group">
              <label>Places</label>
              <input
                type="number"
                class="form-control places"
                name="places"
                max="20"
                required
              />
            </div>
            <div class="form-group">
              <label>Fight Date</label>
              <input type="date" class="form-control" name="fDate" required />
            </div>
            <div class="form-group">
              <label>Fight Time</label>
              <input type="time" class="form-control" name="fTime" required />
            </div>
          </div>

          <div class="modal-footer">
            <!-- <button type="submit" > ccc</button> -->
            <input type="submit" class="btn btn-outline-dark" value="ADD" />
          </div>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script>
      const places = document.querySelector(".places");
      places.addEventListener("input", (e) => {

        // console.log( typeof parseInt(e.target.value) ,typeof parseInt(places.max));
        if (parseInt(e.target.value) >= parseInt(places.max)) {
          places.value = places.max;
        }
      });
    </script>
  </body>
</html>
