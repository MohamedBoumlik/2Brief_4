<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="styles.css" />
    <title>Dashboard</title>
</head>

<body>
    <div class="row">
        <!-- Sidebar -->
        <div class="bg-white col-md-3" >

            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom mb-5" style=" color: #F78536!important;">
                <i class="fas fa-plane me-2"></i>Safi Air
            </div>
            <div class="list-group list-group-flush my-3 mt-5" style="font-size: larger;">
                <a href="/dash" class="list-group-item list-group-item-action bg-transparent" style=" color: #F78536!important;">
                    <i class="fas fa-plane-departure me-2"></i>Flights
                </a>

                <a href="/book" class="list-group-item list-group-item-action bg-transparent" style=" color: #F78536!important;">
                    <i class="fas fa-ticket-alt me-2"></i>Booking
                </a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper" class="col-md-8">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center" style=" color: #F78536!important;">
                    <i class="fas fa-align-left primary-text fs-4 me-3"></i>
                    <h2 class="fs-2 m-0">Dashboard</h2>
                </div>

                <!-- <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> -->

                <!-- <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-2"></i>Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div> -->
            </nav>

            <div class="container-fluid px-4">

                <div class="row my-5">
                    <div class="row">

                        <div class="col-md-6">
                            <h3 class="fs-4 mb-3">Recent reservations</h3>
                        </div>

                        <!-- <div class="col-md-6 d-flex justify-content-end">
                            <a href="/add" class="btn btn-outline-primary">Add flight</a href="/add">
                        </div> -->
                        
                    </div>

                    <div class="col">
                        <table class="table bg-white rounded shadow-sm  table-hover">
                            <thead>
                                <tr>
                                    <!-- <th style="text-align: center; vertical-align: middle;">ID</th> -->
                                    <th style="text-align: center; vertical-align: middle;">Client Name</th>
                                    <th style="text-align: center; vertical-align: middle;">Client Phone</th>
                                    <th style="text-align: center; vertical-align: middle;">From City</th>
                                    <th style="text-align: center; vertical-align: middle;">To City</th>
                                    <th style="text-align: center; vertical-align: middle;">Places</th>
                                    <th style="text-align: center; vertical-align: middle;">Flight Date</th>
                                    <th style="text-align: center; vertical-align: middle;">Flight time</th>
                                    <th style="text-align: center; vertical-align: middle;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (result.length > 0 ) {%>

                                    <% result.forEach(res => { %>
                                    <tr>
                                        <!-- <td style="text-align: center; vertical-align: middle;"><%= res.id %></td> -->
                                        <td style="text-align: center; vertical-align: middle;"><%= res.client_fName %></td>
                                        <td style="text-align: center; vertical-align: middle;"><%= res.tel %></td>
                                        <td style="text-align: center; vertical-align: middle;"><%= res.from_city %></td>
                                        <td style="text-align: center; vertical-align: middle;"><%= res.to_city %></td>
                                        <td style="text-align: center; vertical-align: middle;"><%= res.places %></td>
                                        <td style="text-align: center; vertical-align: middle;"><%= res.flight_date.toLocaleDateString() %></td>
                                        <td style="text-align: center; vertical-align: middle;"><%= res.flight_time %></td>
                                        <td style="text-align: center; vertical-align: middle;">
                                            <form action="/deleteBook/<%= res.id %>" method="post" > <button class="btn btn-outline-danger">Delete</button> </form> 
                                        </td>
                                        
                                    </tr>
                                    <% }) %>

                                <%} else {%>
                                    <h2>No flights programmed</h2>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
